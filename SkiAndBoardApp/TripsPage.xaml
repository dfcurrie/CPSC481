<Page x:Class="SkiAndBoardApp.TripsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkiAndBoardApp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid Height="900">
        <ListBox x:Name="TripListBox" HorizontalAlignment="Left" Height="900" Margin="10,0,0,0" VerticalAlignment="Top" Width="495" FontFamily="Segoe UI" FontSize="20" BorderThickness="0" ItemsSource="{Binding tripList}" SelectionChanged="TripListBox_SelectionChanged" />
    </Grid>
</Page>
