<Page x:Class="SkiAndBoardApp.AddTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkiAndBoardApp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid Height="700" Width="540">
        <ComboBox Name="Location" HorizontalAlignment="Center" Width="410" Height="32" VerticalAlignment="Top" Margin="60,71,70,0" IsDropDownOpen="True" FontSize="20" SelectionChanged="Location_SelectionChanged">
            <ListBoxItem Content="Canada Olympic Park"/>
            <ListBoxItem Content="Canmore Nordic Centre"/>
            <ListBoxItem Content="Canyon Ski Area"/>
            <ListBoxItem Content="Castle Mountain Resort"/>
            <ListBoxItem Content="Drumheller Valley Ski Club"/>
            <ListBoxItem Content="Edmonton Ski Club"/>
            <ListBoxItem Content="Fairview Ski Hill"/>
            <ListBoxItem Content="Fortress Mountain Resort"/>
            <ListBoxItem Content="Hidden Valley Ski Area"/>
            <ListBoxItem Content="Innisfail Ski Hill"/>
            <ListBoxItem Content="Kinosoo Ridge Ski Resort"/>
            <ListBoxItem Content="Lake Louise Mountain Resort"/>
            <ListBoxItem Content="Little Smokey Ski Area"/>
            <ListBoxItem Content="Marmot Basin"/>
            <ListBoxItem Content="Misery Mountain"/>
            <ListBoxItem Content="Mount Norquay Ski Resort"/>
            <ListBoxItem Content="Nakiska"/>
            <ListBoxItem Content="Sunshine"/>
        </ComboBox>
        <Label Content="Location:" HorizontalAlignment="Left" Margin="60,29,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Name="AddTripBtn" Content="Add Trip" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="150" Click="Button_Click" Height="60" FontSize="20" IsEnabled="False" Margin="0,0,0,20" Background="#FFFF6C00" BorderThickness="3" FontWeight="Bold"/>

    </Grid>
</Page>
