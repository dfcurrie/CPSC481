<Page x:Class="SkiAndBoardApp.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkiAndBoardApp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid Height="800">
        <ListBox x:Name="MenuList" HorizontalAlignment="Left" Height="590" Margin="10,0,0,0" VerticalAlignment="Top" Width="500" FontFamily="Sans Serif" FontSize="22" BorderThickness="0">
            <ListBoxItem Content="Welcome" MouseDoubleClick="Welcome_DoubleClick"/>
            <ListBoxItem Content="My Trips" MouseDoubleClick="Trips_DoubleClick"/>
            <ListBoxItem Content="Friend Finder" MouseDoubleClick="Friends_DoubleClick"/>
            <ListBoxItem Content="My Stats" MouseDoubleClick="Stats_DoubleClick"/>
            <ListBoxItem Content="Hill Info" MouseDoubleClick="Info_DoubleClick"/>
            <ListBoxItem Content="Deals" MouseDoubleClick="Deals_DoubleClick"/>
            <ListBoxItem Content="Friend Sync" MouseDoubleClick="Sync_DoubleClick"/>
        </ListBox>
    </Grid>
    </Page>
