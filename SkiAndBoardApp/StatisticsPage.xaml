        <Label Content="Calories" HorizontalAlignment="Left" Margin="10,520,0,0" VerticalAlignment="Top" Height="105" Width="140" FontFamily="Segoe UI" FontSize="16"/>
        <Label Content="Avg. Heart Rate:" HorizontalAlignment="Left" Margin="190,520,0,0" VerticalAlignment="Top" Height="105" Width="140" FontSize="16"/>
        <Label Content="Time:" HorizontalAlignment="Left" Margin="375,520,0,0" VerticalAlignment="Top" Height="105" Width="140" FontSize="16"/>

        <TextBlock x:Name="Friend1_numRuns" HorizontalAlignment="Left" Height="52" Margin="25,337,0,0" TextWrapping="Wrap" Text="5" FontFamily="Segoe UI" FontSize="32" VerticalAlignment="Top" Width="89" TextAlignment="Center"/>
        <TextBlock x:Name="Friend1_dist" HorizontalAlignment="Left" Height="52" Margin="201,337,0,0" TextWrapping="Wrap" Text="17.2 km" FontFamily="Segoe UI" FontSize="30" VerticalAlignment="Top" Width="109" TextAlignment="Center"/>
