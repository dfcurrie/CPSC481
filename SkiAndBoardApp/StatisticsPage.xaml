        <Image x:Name="Friend1_pic" HorizontalAlignment="Left" Height="295" Margin="107,0,0,0" VerticalAlignment="Top" Width="333" Source="stats1.jpg"/>
        <Image x:Name="Friend2_pic" HorizontalAlignment="Left" Height="295" Margin="107,0,0,0" VerticalAlignment="Top" Width="333" Source="stats2.jpg"/>
        <Image x:Name="Friend3_pic" HorizontalAlignment="Left" Height="295" Margin="107,0,0,0" VerticalAlignment="Top" Width="333" Source="stats3.jpg"/>
