            <ListBoxItem x:Name="Friend2" Content="LaVerne Woroschuk" Selected="Friend2_Selected"/>
            <ListBoxItem x:Name="Friend3" Content="David Currie" Selected="Friend3_Selected"/>
        </ListBox>
        <Label Content="Number of Runs:" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Height="100" Width="140" FontFamily="Segoe UI" FontSize="16"/>
        <Label Content="Distance:" HorizontalAlignment="Left" Margin="190,310,0,0" VerticalAlignment="Top" Height="105" Width="140" FontFamily="Segoe UI" FontSize="16"/>
        <Label Content="Max Speed:" HorizontalAlignment="Left" Margin="375,415,0,0" VerticalAlignment="Top" Height="105" Width="140" FontFamily="Segoe UI" FontSize="16"/>
        <Label Content="Elevation:" HorizontalAlignment="Left" Margin="10,415,0,0" VerticalAlignment="Top" Height="105" Width="140" FontFamily="Segoe UI" FontSize="16"/>
        <Label Content="Vertical:" HorizontalAlignment="Left" Margin="190,415,0,0" VerticalAlignment="Top" Height="105" Width="140" FontFamily="Segoe UI" FontSize="16"/>
